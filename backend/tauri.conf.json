{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gamus",
  "version": "0.1.0",
  "identifier": "com.gamus.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "gamus",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "pattern": {
        "use": "isolation",
        "options": {
          "dir": "../dist/isolation"
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
